{% extends "base.html.twig" %}


{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/homepage.css') }}">
{% endblock %}


{% block body %}

<div class="jumbotron jumboserach">
    <div class="container-fluid jumbocontain">
        <form class="formsearch" method="get" action="search_player">
            <div class="form-group line-search">
                <label for="radio-xbox" class="logo-plateforme">
                    <div type="button" class="logo-plateforme btn logo-btn search-btn btn-secondary" id="btn-xbox">                     
                        <i class="fab fa-xbox fa-2x"></i>   
                        <input class="radiosearch" type="radio" id="radio-xbox" name="plateforme" value="1">
                    </div>
                </label>             
                <label for="radio-playstation" class="logo-plateforme">
                    <div type="button" class="logo-plateforme btn logo-btn search-btn btn-secondary" id="btn-playstation">                    
                        <i class="fab fa-playstation fa-2x"></i>
                        <input class="radiosearch" type="radio" id="radio-playstation" name="plateforme" value="2">
                    </div>
                </label>
                <label for="radio-steam" class="logo-plateforme">
                    <div type="button" class="logo-plateforme btn logo-btn search-btn btn-secondary" id="btn-steam">
                        <i class="fab fa-steam fa-2x"></i>
                        <input class="radiosearch" type="radio" id="radio-steam" name="plateforme" value="4">
                    </div>
                </label>
                <label for="radio-stadia" class="logo-plateforme">
                    <div type="button" class="logo-plateforme btn logo-btn search-btn btn-secondary" id="btn-stadia">
                        <i class="fab fa-steam fa-2x"></i>
                        <input class="radiosearch" type="radio" id="radio-stadia" name="plateforme" value="5">
                    </div>
                </label>
                
                <input type="search" class="form-control" id="search">
                    
                </input>
                <button class="search-loupe btn search-btn btn-secondary" type="submit" name="search">
                        <i class="fas fa-search"></i>
                </button>
                
            </div>
        </form>
    </div>
</div>

{% endblock %}


{% block javascripts %}{% endblock %}